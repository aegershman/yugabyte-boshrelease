[authentication]
username = cassandra
password = <%= p("ycql.cassandra_password") %>

[connection]
hostname = <%= spec.address %>
port = <%= p("cql_proxy_bind_port") %>
ssl = <%= p("tls.use_client_to_server_encryption") %>
request_timeout = 10
timeout = 10

[ssl]
certfile = /var/vcap/jobs/yb-tserver/config/certs/ca.crt
