---
processes:
  - name: yugabyted
    executable: /var/vcap/packages/yugabyte/bin/yugabyted
    persistent_disk: true
    args:
      - start
      - --data_dir=/var/vcap/store/yugabyted
      - --log_dir=/var/vcap/sys/log/yugabyted
      - --bind_ip=<%= spec.address %>

    capabilities:
      - NET_BIND_SERVICE

    hooks:
      pre_start: /var/vcap/packages/yugabyte/bin/post_install.sh
