<% if p("bpm.enabled") %>
check process yugabyted
  with pidfile /var/vcap/sys/run/bpm/yugabyted/yugabyted.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start yugabyted"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop yugabyted"
  group vcap
<% else %>
check process yugabyted
  with pidfile /var/vcap/sys/run/yugabyted/yugabyted.pid
  start program "/var/vcap/jobs/yugabyted/bin/yugabyted_ctl start"
  stop program "/var/vcap/jobs/yugabyted/bin/yugabyted_ctl stop"
  group vcap
<% end %>
