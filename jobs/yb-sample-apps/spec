templates:
  bpm.erb.yml: config/bpm.yml
  pre-start.sh: bin/pre-start
  yb-sample-apps.sh: yb-sample-apps.sh

consumes:
  - name: yb-master
    type: conn
    optional: true

  - name: yb-tserver
    type: conn
    optional: true

